<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PresentHeadmaster">
    back with title bar

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#5AA85D"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="3dp"
            android:onClick="goback"
            android:src="@drawable/back_arrow" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/kalpurush"
            android:gravity="center_vertical"
            android:shadowColor="@color/black"
            android:text="বর্তমান প্রধান শিক্ষক"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />
    </LinearLayout>
    back with title bar

    <GridLayout
        android:layout_width="390dp"
        android:layout_height="300dp"
        android:alignmentMode="alignMargins"
        android:columnCount="3"
        android:columnOrderPreserved="false"
        android:minHeight="50dp"
        android:padding="10dp"
        android:rowCount="3">

        <androidx.cardview.widget.CardView
            android:id="@+id/sahedalicard"
            android:layout_width="330dp"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="16dp"
            android:onClick="presentonclick"
            android:outlineSpotShadowColor="#37FF00"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="340dp"
                android:layout_height="150dp"
                android:layout_margin="15dp"

                android:orientation="horizontal">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@color/white"
                    android:padding="5dp"
                    android:src="@drawable/sahedali"
                    app:shapeAppearanceOverlay="@style/Circular"
                    app:strokeColor="@color/green"

                    app:strokeWidth="2dp"></com.google.android.material.imageview.ShapeableImageView>

                <LinearLayout
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView

                        android:layout_width="210dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/kalpurush"
                        android:text="জনাব মো. সাহেদ আলী "
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView

                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:fontFamily="@font/kalpurush"
                        android:text=" প্রধান শিক্ষক "
                        android:textAlignment="center"
                        android:textColor="@color/black" />

                    <TextView

                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/kalpurush"
                        android:text="যোগদানের সময় (২১/০৯/২০১৫ - চলমান) "
                        android:textAlignment="center"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/kalpurush"
                        android:text="(যোগাযোগের জন্য ক্লিক করুন ) "
                        android:textAlignment="center"
                        android:textSize="10sp"

                        />
                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </GridLayout>
</LinearLayout>