<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PassisHead">
    back with title bar
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@color/gray"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back_arrow"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="10dp"
            android:onClick="goback"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:fontFamily="@font/kalpurush"
            android:shadowColor="@color/black"
            android:textStyle="bold"
            android:text="বর্তমান সহকারী প্রধান শিক্ষক"
            android:textColor="@color/black"
            android:textSize="25sp"
            />
    </LinearLayout>back with title bar
    <GridLayout
        android:layout_width="390dp"
        android:layout_height="300dp"
        android:alignmentMode="alignMargins"
        android:columnCount="3"
        android:columnOrderPreserved="false"
        android:padding="10dp"
        android:minHeight="50dp"
        android:rowCount="3">
        <androidx.cardview.widget.CardView
            android:id="@+id/aruncard"
            android:layout_marginTop="20dp"
            android:onClick="asispresentonclick"
            android:layout_width="330dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="340dp"
                android:layout_height="150dp"
                android:layout_margin="15dp"
                android:orientation="horizontal">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="20dp"
                    android:padding="5dp"
                    android:background="@color/white"
                    android:src="@drawable/arun"
                    app:shapeAppearanceOverlay="@style/Circular"
                    app:strokeColor="@color/black"
                    app:strokeWidth="2dp"></com.google.android.material.imageview.ShapeableImageView>
                <LinearLayout
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView

                        android:layout_width="210dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="17dp"
                        android:fontFamily="@font/kalpurush"

                        android:text="জনাব অরুন চন্দ্র দাস"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                    <TextView

                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:fontFamily="@font/kalpurush"
                        android:text=" সহকারী প্রধান শিক্ষক "
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        />
                    <TextView

                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
android:layout_gravity="center"
                        android:fontFamily="@font/kalpurush"
                        android:text="যোগদানের সময় (০১/০৬/১৯৯২ - চলমান) "
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        />
                    <TextView
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/kalpurush"
                        android:text="(যোগাযোগের জন্য ক্লিক করুন ) "
                        android:textAlignment="center"

                        />
                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </GridLayout>
</LinearLayout>